<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bradleycooper.politicslive">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Ballot"
            android:label="@string/title_activity_ballot"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradleycooper.politicslive.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.CandidateProfile"
            android:label="@string/title_activity_candidate_profile"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradleycooper.politicslive.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradleycooper.politicslive.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.CreateUser"
            android:label="@string/title_activity_create_user"
            android:parentActivityName=".activities.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradleycooper.politicslive.activities.LoginActivity" />
        </activity>
        <activity
            android:name=".activities.AppSettings"
            android:label="@string/title_activity_app_settings"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradleycooper.politicslive.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.SendingEmailActivity"
            android:label="@string/title_activity_app_send_email"
            android:parentActivityName=".activities.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.UserProfileGeneric"
            android:label="@string/title_activity_user_profile_generic"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradleycooper.politicslive.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.PollDetailActivity"
            android:label="@string/title_activity_poll_detail"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradleycooper.politicslive.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.PoliticalPartyProfile"
            android:label="@string/title_activity_political_party_profile"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradleycooper.politicslive.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.AllEvents"
            android:label="@string/title_activity_all_events"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradleycooper.politicslive.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.EventDetails"
            android:label="@string/title_activity_event_details"
            android:parentActivityName=".activities.AllEvents"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradleycooper.politicslive.activities.AllEvents" />
        </activity>
        <activity
            android:name=".activities.AllPoliticalParties"
            android:label="@string/title_activity_all_political_parties"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradleycooper.politicslive.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.AllPolls"
            android:label="@string/title_activity_all_polls"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradleycooper.politicslive.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.AllPresidentialCandidates"
            android:label="@string/title_activity_all_presidential_candidates"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradleycooper.politicslive.activities.MainActivity" />
        </activity>
    </application>

</manifest>