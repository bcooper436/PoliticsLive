<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bradleycooper.politicslive.activities.LoginActivity"
    tools:showIn="@layout/activity_login"
    android:background="@color/colorBlueDark"
    android:id="@+id/relativeLayoutLoginBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:baselineAligned="false"
        android:weightSum="1"
        android:id="@+id/linearLayout2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_user_name"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:elegantTextHeight="true"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginTop="40dp"
            android:hint="Username"
            android:textColorHint="#96ffffff" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_password"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:elegantTextHeight="true"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginTop="10dp"
            android:hint="Password"
            android:textColorHint="#96ffffff"
            android:password="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:id="@+id/buttonLogIn"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Create New Account"
            android:id="@+id/textViewNewAccount"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorBlueLight"
            android:layout_marginTop="30dp"
            android:onClick="CreateNewAccount"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout2"
        android:background="@color/colorBlueDarker"
        android:onClick="Skip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Click to Enter the App"
            android:id="@+id/textView8"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorBlueLight" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Live!"
        android:id="@+id/textView11"
        android:textIsSelectable="false"
        android:textSize="40dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold|italic"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Politics"
        android:id="@+id/textView10"
        android:textIsSelectable="false"
        android:textSize="40dp"
        android:textColor="#ffffff"
        android:textStyle="bold|italic"
        android:layout_below="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome to..."
        android:id="@+id/welcomeText"
        android:layout_above="@+id/textView10"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textColor="@color/colorBlueLight"
        android:layout_marginBottom="15dp"
        android:textSize="20dp"
        android:alpha="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome to Politics Live, a beautifully designed, non-partisan hub for all political information about the 2016 Presidential Election.  "
        android:id="@+id/textViewWelcome1"
        android:layout_below="@+id/textView11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:alpha="1"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This app was created by a student from Georgia State University, and as such, is still in beta testing.  Please enjoy!"
        android:id="@+id/textViewWelcome2"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/textViewWelcome1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:alpha="1"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewTest"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
